<?xml version="1.0" encoding="UTF-8"?>
<assembly
	xmlns="http://maven.apache.org/plugins/maven-assembly-plugin/assembly/1.1.2"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://maven.apache.org/plugins/maven-assembly-plugin/assembly/1.1.2 http://maven.apache.org/xsd/assembly-1.1.2.xsd">

	<id>full-documentation</id>

	<formats>
		<format>zip</format>
	</formats>

	<includeBaseDirectory>false</includeBaseDirectory>

	<fileSets>
		<fileSet>
			<directory>target/generated-docs</directory>
			<outputDirectory>reference</outputDirectory>
			<excludes>
				<exclude>index.pdf</exclude>
			</excludes>
		</fileSet>

		<fileSet>
			<directory>target/maven-shared-archive-resources/documentation</directory>
			<outputDirectory>reference</outputDirectory>
			<includes>
				<include>**/*.css</include>
			</includes>
		</fileSet>

		<fileSet>
			<directory>target/maven-shared-archive-resources/documentation</directory>
			<outputDirectory>reference/images</outputDirectory>
			<includes>
				<include>**/*.png</include>
				<include>**/*.jpg</include>
			</includes>
		</fileSet>
	</fileSets>

	<dependencySets>
		<!-- Modules documentation (html) -->
		<dependencySet>
			<includes>
				<include>*:documentation-*:zip:*</include>
			</includes>
			<outputDirectory>reference</outputDirectory>
			<unpack>true</unpack>
			<unpackOptions>
				<excludes>
					<exclude>**/*.pdf</exclude>
					<exclude>**/include/**</exclude>
				</excludes>
			</unpackOptions>
		</dependencySet>

		<!-- Modules documentation (pdf) -->
		<dependencySet>
			<includes>
				<include>*:documentation-*:zip:*</include>
			</includes>
			<outputDirectory>reference/pdf</outputDirectory>
			<unpack>true</unpack>
			<unpackOptions>
				<includes>
					<include>**/*.pdf</include>
				</includes>
			</unpackOptions>
		</dependencySet>

		<!-- Javadocs -->
		<dependencySet>
			<includes>
				<include>*:holon-root:zip:apidocs</include>
			</includes>
			<outputDirectory>api/holon-core</outputDirectory>
			<unpack>true</unpack>
		</dependencySet>
		<dependencySet>
			<includes>
				<include>*:holon-reactor-root:zip:apidocs</include>
			</includes>
			<outputDirectory>api/holon-reactor</outputDirectory>
			<unpack>true</unpack>
		</dependencySet>
		<dependencySet>
			<includes>
				<include>*:holon-json-root:zip:apidocs</include>
			</includes>
			<outputDirectory>api/holon-json</outputDirectory>
			<unpack>true</unpack>
		</dependencySet>
		<dependencySet>
			<includes>
				<include>*:holon-jaxrs-root:zip:apidocs</include>
			</includes>
			<outputDirectory>api/holon-jaxrs</outputDirectory>
			<unpack>true</unpack>
		</dependencySet>
		<dependencySet>
			<includes>
				<include>*:holon-jdbc-root:zip:apidocs</include>
			</includes>
			<outputDirectory>api/holon-jdbc</outputDirectory>
			<unpack>true</unpack>
		</dependencySet>
		<dependencySet>
			<includes>
				<include>*:holon-datastore-jdbc-root:zip:apidocs</include>
			</includes>
			<outputDirectory>api/holon-datastore-jdbc</outputDirectory>
			<unpack>true</unpack>
		</dependencySet>
		<dependencySet>
			<includes>
				<include>*:holon-jpa-root:zip:apidocs</include>
			</includes>
			<outputDirectory>api/holon-jpa</outputDirectory>
			<unpack>true</unpack>
		</dependencySet>
		<dependencySet>
			<includes>
				<include>*:holon-datastore-jpa-root:zip:apidocs</include>
			</includes>
			<outputDirectory>api/holon-datastore-jpa</outputDirectory>
			<unpack>true</unpack>
		</dependencySet>
		<dependencySet>
			<includes>
				<include>*:holon-datastore-jpa-querydsl-root:zip:apidocs</include>
			</includes>
			<outputDirectory>api/holon-datastore-jpa-querydsl</outputDirectory>
			<unpack>true</unpack>
		</dependencySet>
		<dependencySet>
			<includes>
				<include>*:holon-datastore-mongo-root:zip:apidocs</include>
			</includes>
			<outputDirectory>api/holon-datastore-mongo</outputDirectory>
			<unpack>true</unpack>
		</dependencySet>
		<dependencySet>
			<includes>
				<include>com.holon-platform.vaadin:holon-vaadin-flow-root:zip:apidocs</include>
			</includes>
			<outputDirectory>api/holon-vaadin-flow</outputDirectory>
			<unpack>true</unpack>
		</dependencySet>
		<dependencySet>
			<includes>
				<include>com.holon-platform.vaadin:holon-vaadin-root:zip:apidocs</include>
			</includes>
			<outputDirectory>api/holon-vaadin</outputDirectory>
			<unpack>true</unpack>
		</dependencySet>
		<dependencySet>
			<includes>
				<include>com.holon-platform.vaadin7:holon-vaadin-root:zip:apidocs</include>
			</includes>
			<outputDirectory>api/holon-vaadin7</outputDirectory>
			<unpack>true</unpack>
		</dependencySet>
	</dependencySets>

</assembly>