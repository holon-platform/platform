<?xml version="1.0" encoding="UTF-8"?>
<assembly
	xmlns="http://maven.apache.org/plugins/maven-assembly-plugin/assembly/1.1.2"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://maven.apache.org/plugins/maven-assembly-plugin/assembly/1.1.2 http://maven.apache.org/xsd/assembly-1.1.2.xsd">

	<id>full-documentation</id>

	<formats>
		<format>zip</format>
	</formats>

	<includeBaseDirectory>false</includeBaseDirectory>

	<fileSets>
		<fileSet>
			<directory>target/generated-docs</directory>
			<outputDirectory></outputDirectory>
			<excludes>
				<exclude>docinfo-footer.html</exclude>
			</excludes>
		</fileSet>
	</fileSets>

	<dependencySets>
		<!-- Modules documentation -->
		<dependencySet>
			<includes>
				<include>*:documentation-*:zip:*</include>
			</includes>
			<outputDirectory>reference</outputDirectory>
			<unpack>true</unpack>
		</dependencySet>

		<!-- Javadocs -->
		<dependencySet>
			<includes>
				<include>*:holon-root:zip:apidocs</include>
			</includes>
			<outputDirectory>api/holon-core</outputDirectory>
			<unpack>true</unpack>
		</dependencySet>
		<dependencySet>
			<includes>
				<include>*:holon-json-root:zip:apidocs</include>
			</includes>
			<outputDirectory>api/holon-json</outputDirectory>
			<unpack>true</unpack>
		</dependencySet>
		<dependencySet>
			<includes>
				<include>*:holon-jaxrs-root:zip:apidocs</include>
			</includes>
			<outputDirectory>api/holon-jaxrs</outputDirectory>
			<unpack>true</unpack>
		</dependencySet>
		<dependencySet>
			<includes>
				<include>*:holon-jdbc-root:zip:apidocs</include>
			</includes>
			<outputDirectory>api/holon-jdbc</outputDirectory>
			<unpack>true</unpack>
		</dependencySet>
		<dependencySet>
			<includes>
				<include>*:holon-datastore-jdbc-root:zip:apidocs</include>
			</includes>
			<outputDirectory>api/holon-datastore-jdbc</outputDirectory>
			<unpack>true</unpack>
		</dependencySet>
		<dependencySet>
			<includes>
				<include>*:holon-datastore-jpa-root:zip:apidocs</include>
			</includes>
			<outputDirectory>api/holon-datastore-jpa</outputDirectory>
			<unpack>true</unpack>
		</dependencySet>
		<dependencySet>
			<includes>
				<include>*:holon-datastore-jpa-querydsl-root:zip:apidocs</include>
			</includes>
			<outputDirectory>api/holon-datastore-jpa-querydsl</outputDirectory>
			<unpack>true</unpack>
		</dependencySet>
		<dependencySet>
			<includes>
				<include>*:holon-vaadin-root:zip:apidocs</include>
			</includes>
			<outputDirectory>api/holon-vaadin</outputDirectory>
			<unpack>true</unpack>
		</dependencySet>
	</dependencySets>

</assembly>